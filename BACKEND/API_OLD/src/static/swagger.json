{
    "openapi": "3.0.0",
    "info": {
      "description": "Rafa≈Ç Figlus",
      "version": "1.0.0",
      "title": "YourTour REST API",
      "contact": {
        "email": "figlusrafal@gmail.com"
      }
    },
    "paths": {
      "/authenticate":{
        "post":{
          "tags":["User"],
          "requestBody":{
            "description": "Authentication credentials",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"schemas.json#/UserAuthentication"
                }
              }
            }
          },
          "responses":{
            "200":{
              "description": "OK, user authenticated, JWT or Cookie returned"
            },
            "403":{
              "description": "Not allowed - wrong password OR account not yet confirmed"
            }
          }
        }
      },
      "/register":{
        "post":{
          "tags":["User"],
          "requestBody":{
            "description": "Registration credentials",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"schemas.json#/UserRegistration"
                }
              }
            }
          },
          "responses":{
            "201":{
              "description": "Ok, new account created"
            },
            "409":{
              "description": "User already exists"
            }
          }
        }
      },
      "/send_message":{
        "post":{
          "tags":["Messages"],
          "requestBody":{
            "description": "Sending new message, tour_id is optional",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"schemas.json#/NewMessage"
                }
              }
            }
          },
          "responses":{
            "204":{
              "description": "Message sent, nothing to return"
            }
          }
        }
      },
      "/get_places_by_input":{
        "post":{
          "tags": ["Tour"],
          "requestBody":{
            "description": "Send search input for available places",
            "required": "True",
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"schemas.json#/TourPlacesSearch"
                }
              }
            }
          }
        }
      }
    }
  }
    "tags": [
      {
        "name": "Authenticate",
        "description": "Endpoint for logging in to application"
      },
      { 
        "name": "Register account",
        "description": "Endpoint for new user registration"
      }
    ],
    "paths": {
      "/authenticate":{
        "post":{
          "tags":[
              "Authenticate user"
          ],
          "requestBody":{
            "description": "Authentication credentials",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"schemas.json#/UserAuthentication"
                }
              }
            }
          },
          "responses":{
            "200":{
              "description": "OK, user authenticated, JWT or Cookie returned"
            },
            "403":{
              "description": "Not allowed - wrong password OR account not yet confirmed"
            }
          }
        }
      }
    }
  }